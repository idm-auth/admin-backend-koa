{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}